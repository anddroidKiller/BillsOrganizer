<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_open_cv_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="application.Activities.openCvTest"
    android:weightSum="1">


    <TextView
        android:text="treshold1"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/treshold1" />

    <SeekBar
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:id="@+id/seekBar1"
    android:max="500" />

    <TextView
        android:text="treshold2"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/treshold2" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/seekBar2"
        android:max="500" />

    <Switch
        android:text="Grayscale Or Canny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GrayscaleOrCanny" />
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <org.opencv.android.JavaCameraView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:id="@+id/java_cam"
        app:show_fps="true"
        android:outlineProvider="bounds"
        />
</LinearLayout>


</LinearLayout>

